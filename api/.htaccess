# API .htaccess - Handle API routes without .php extension
RewriteEngine On

# If request is for a directory, allow it
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# If request is for an existing file, allow it
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Rewrite API routes to add .php extension if file exists
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+)$ $1.php [L]

